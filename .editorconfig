# Set this file as the root configuration file for the project.
root = true

# Default settings for all file types
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Settings specific to TypeScript files
[*.ts]
quote_type = single

# Settings specific to Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
